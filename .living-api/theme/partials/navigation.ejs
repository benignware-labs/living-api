<% if (children.length) { %>
<nav class="ld-Accordion">
  <% children.forEach((item, index) => { %>
    <input
      data-ui
      type="radio"
      name="<%- id %>"
      id="<%- item.id %>"
      data-path="<%= item.path %>"
      <% if (item.url) { %>
        data-href="<%= item.url %>"
      <% } %>
      <%= current.path.startsWith(item.path) ? 'checked' : '' %>
    />
    <label
      data-ui
      for="<%- item.id %>"
      class="ld-Accordion-header<%= item.url === current.url ? ' is-active' : '' %>"
    >
      <<%- item.url ? 'span' : 'span' %>
        <% if (item.url) { %>
          data-href="<%= item.url %>"
        <% } %>
      >
        <%= item.label %>
        <% if (item.children.length) { %>
          <i class="ld-Accordion-chevron ld-Icon" data-icon="chevron"></i>
        <% } %>
      </<%- item.url ? 'span' : 'span' %>>
    </label>
    <div class="ld-Accordion-content" data-size="<%= item.children.length %>">
      <%- include('navigation', { ...item, level: level + 1 }); %>
    </div>
  <% }) %>
</nav>
<% } %>
